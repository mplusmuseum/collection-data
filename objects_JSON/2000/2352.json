        "exhibitionLabelText": {
            "en": {
                "purposes": [
                    "M+ Sigg Collection",
                    "Sigg Online"
                ],
                "labels": [
                    {
                        "purpose": "M+ Sigg Collection",
                        "text": "This series of photographs document a major public performance by Wang Jin in January 1996. He built an ice wall across from a newly-opened department store in Zhenzhou with the help of artists Gou Jinghan and Jiang Bo. He placed consumer goods such as toys and jewellery inside the blocks of ice, provoking the crowd to destroy the wall to retrieve the objects."
                    },
                    {
                        "purpose": "Sigg Online",
                        "text": "This series of photographs documents a major public performance by Wang Jin in January 1996. He built an ice wall across from a newly opened department store in Zhenzhou with the help of artists Gou Jinghan and Jiang Bo. He placed consumer goods such as toys and jewellery inside the blocks of ice, provoking the crowd to destroy the wall to retrieve the objects."
                    }
                ]
            },
            "zh-hant": {
                "purposes": [
                    "M+ Sigg Collection",
                    "Sigg Online"
                ],
                "labels": [
                    {
                        "purpose": "M+ Sigg Collection",
                        "text": "此系列照片於1996年1月拍攝，當時王晉正在進行一場大型公共行為表演。在藝術家郭景涵和姜波的協助下，王晉在鄭州一間新開張的百貨公司對面築起一堵冰牆。他們把玩具和珠寶等消費品封在冰裡，並鼓勵群眾鑿破冰牆取得物品。"
                    },
                    {
                        "purpose": "Sigg Online",
                        "text": "此系列照片於1996年1月拍攝，當時王晉正在進行一場大型公共行為展演。在藝術家郭景涵和姜波的協助下，王晉在鄭州一間新開張的百貨公司對面築起一堵冰牆。他們把玩具和珠寶等消費品封在冰裏，鼓勵群眾鑿破冰牆取得物品。"
                    }
                ]
            }
